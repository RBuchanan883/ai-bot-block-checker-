{
  "openapi": "3.1.0",
  "info": {
    "title": "AI Bot Block Checker",
    "version": "1.0.0",
    "description": "Checks if a website blocks popular AI crawlers via robots.txt."
  },
  "servers": [
    { "url": "https://ai-bot-block-checker.onrender.com" }
  ],
  "paths": {
    "/check": {
      "get": {
        "operationId": "checkBots",
        "summary": "Check whether major AI bots are blocked by robots.txt",
        "parameters": [
          {
            "in": "query",
            "name": "url",
            "required": true,
            "description": "Any URL on the target site (include https://). The API normalizes to the site's origin.",
            "schema": { "type": "string", "format": "uri" }
          },
          {
            "in": "query",
            "name": "bots",
            "required": false,
            "description": "User-agent names to test. Defaults to a comprehensive AI bot list.",
            "style": "form",
            "explode": true,
            "schema": {
              "type": "array",
              "items": { "type": "string" },
              "default": [
                "GPTBot","ChatGPT-User","OAI-SearchBot",
                "PerplexityBot","Perplexity-User",
                "Google-Extended","Google AI","GoogleOther",
                "ClaudeBot","Anthropic-ai","Claude-Web",
                "Applebot-Extended",
                "Bingbot","Bing Copilot",
                "DuckDuckBot","BraveBot","YouBot","NeevaAI","KomodoBot",
                "CCBot","Diffbot","SerpApiBot","DataForSEO","AhrefsBot","SemrushBot"
              ]
            }
          },
          {
            "in": "query",
            "name": "includeRobotsTxt",
            "required": false,
            "description": "Return the raw robots.txt text.",
            "schema": { "type": "boolean", "default": true }
          }
        ],
        "responses": {
          "200": {
            "description": "Check completed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "robotsTxtFound": { "type": "boolean" },
                    "robotsUrl": { "type": "string" },
                    "statusCode": { "type": ["integer", "null"] },
                    "blockedBots": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "userAgent": { "type": "string" },
                          "canFetchRoot": { "type": "boolean" },
                          "canFetchSitewide": { "type": "boolean" },
                          "notes": { "type": ["string", "null"] }
